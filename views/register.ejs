<%- include('partials/header') %>
<div class="container mt-5">
  <div class="row">
    <div class="col-sm-6">
      <div class="card signInCard">
        <div class="card-body">
          <div class="row">
          <div class="signInTitle col-md-4">
            <h2>Sign Up</h2>
          </div>
          <!-- <hr class="lineBesideTitle">
          <div class="col-md-4">
             <div class="card">
                 <a href="/auth/google">
